<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F1F1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/icecream"
        android:shadowColor="#22544F"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Patoladora"
        android:textColor="#1A514C"
        android:textColorHighlight="#FFFFFF"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <EditText
        android:id="@+id/numDois"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:background="@drawable/a"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Nmr dois"
        android:inputType="textPersonName"
        android:shadowColor="#A2AF76"
        android:textAlignment="center"
        android:textColor="#14131B"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#14131B"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <EditText
        android:id="@+id/numUm"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:background="@drawable/a"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Nmr um"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#14131B"
        android:textColorHighlight="#FD0000"
        android:textColorHint="#14131B"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <Button
        android:id="@+id/btnMenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A514C"
        android:fontFamily="sans-serif-black"
        android:onClick="subtation"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="#EFF0F0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607"
        app:strokeColor="#1A514C"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/btnMais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A514C"
        android:fontFamily="sans-serif-black"
        android:onClick="somation"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="#EFF0F0"
        android:textColorHint="#A2AF76"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607"
        app:strokeColor="#1A514C"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A514C"
        android:fontFamily="sans-serif-black"
        android:onClick="multiplication"
        android:text="x"
        android:textAllCaps="false"
        android:textColor="#EFF0F0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709"
        app:strokeColor="#1A514C"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/btnDivisao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A514C"
        android:fontFamily="sans-serif-black"
        android:onClick="divisation"
        android:text="รท"
        android:textAllCaps="false"
        android:textColor="#EFF0F0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709"
        app:strokeColor="#1A514C" />

    <TextView
        android:id="@+id/result"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#EFF0F0"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#FF0808"
        android:shadowDx="10"
        android:shadowDy="10"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#14131B"
        android:textColorHighlight="#FF0000"
        android:textColorHint="#FF0000"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#EFF0F0"
        android:fontFamily="sans-serif-black"
        android:onClick="limpation"
        android:text="Limpar"
        android:textAllCaps="false"
        android:textColor="#15161E"
        android:textColorHighlight="#9FAB72"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#FF14131B"
        app:strokeWidth="5px" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="431dp"
        android:layout_height="537dp"
        android:layout_marginEnd="-80dp"
        android:layout_marginBottom="-200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992"
        app:srcCompat="@drawable/background" />

</androidx.constraintlayout.widget.ConstraintLayout>